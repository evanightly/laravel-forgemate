root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_size              = 4
indent_style             = space
insert_final_newline     = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{js,ts,jsx,tsx}]
ij_html_quote_style             = single
ij_html_enforce_quotes          = true
ij_css_enforce_quotes_on_format = true
ij_css_use_double_quotes        = false
ij_javascript_force_quote_style = true
ij_javascript_use_double_quotes = false
ij_typescript_force_quote_style = true
ij_typescript_use_double_quotes = false
ij_xml_align_attributes         = true
ij_xml_align_text               = true
ij_xml_attribute_wrap           = normal
ij_xml_block_comment_add_space  = true
ij_xml_space_after_tag_name     = true

[*.json]

[docker-compose.yml]
indent_size = 4
